{% extends 'base.html.twig' %}

{% block body %}

<div class="container min_height">
    <div class="row">
        <div class="col-md-10">
            <h1 class="pagination-centered">Lista de Serviços</h1>
        </div>
    </div>

    <div class="row padding-top padding-bottom">
        <div class="col-md-1">
            <a class="abuttonCadastrar" href="{{ path('servico_new') }}">Cadastrar</a>
        </div>
    </div>

    <div class="row row-centered">
        <div class="col-md-10">

    <table class="table pagination-centered">
        <thead>
            <tr>
                <th class="center">#</th>
                <th class="left">Descricao</th>
                <th class="center">Aliquota</th>
                <th class="center">Plano</th>
                <th class="center">Código Serviço</th>
                <th class="right">Valor</th>
                <th class="center">Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for servico in servicos %}
            <tr>
                {#<td><a href="{{ path('servico_show', { 'id': servico.id }) }}">{{ servico.id }}</a></td>#}
                <td class="center">{{ servico.id }}</td>
                <td class="left">{{ servico.descricao }}</td>
                <td class="center">{{ servico.percIss }}</td>
                <td class="center">{{ servico.plano }}</td>
                <td class="center">{{ servico.codSerPref }}</td>
                <td class="right">R$ {{ servico.valor|number_format(2, ',', '') }}</td>

                <td class="center">
                    <a href="{{ path('servico_edit', { 'id': servico.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>

{% endblock %}
